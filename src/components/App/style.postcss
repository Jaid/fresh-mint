.content {
    display: flex;
    @media only screen and (max-width: 768px) {
        display: block;
    }
    height: 100vh;
    > pre {
        flex: 1;
        margin-bottom: 0;
        background: #282c34;
        box-shadow: 0 0 7px #00000066;
        white-space: pre-line;
    }
    ::-webkit-scrollbar {
        background: transparent;
        width: 8px;
    }
    ::-webkit-scrollbar-thumb {
        background: #00000066;
    }
}

.form {
    padding: 1em;
    overflow: auto;
    div:global(.checkbox) {
        &:hover {
            input {
                box-shadow: 0 0 5px #66ff66;
            }
        }
        input {
            appearance: none;
            width: 1.4em;
            height: 1.4em;
            position: relative;
            margin-right: 0.5em;
            background: #DDD;
            vertical-align: top;
            outline: none;
            box-shadow: 0 0 5px black;
            &:checked {
                background: #70c370;
                &:before {
                    font-size: 150%;
                    bottom: 0.25em;
                }
            }
            &:before {
                content: 'âœ“';
                width: 100%;
                height: 100%;
                color: white;
                position: absolute;
                font-size: 0%;
                transition: font-size 0.2s;
                text-align: center;
                text-shadow: 0 0 4px black;
            }
        }
        span {
            user-select: none;
        }
    }
}

